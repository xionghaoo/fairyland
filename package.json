{
  "name": "fairyland",
  "version": "0.0.1",
  "private": true,
  "main": "main.js",
  "authors": "xionghao",
  "description": "幻境项目",
  "scripts": {
    "start": "vue-cli-service build && export ELECTRON_IS_DEV=1 || set ELECTRON_IS_DEV=1 && electron-forge start",
    "start_prod": "vue-cli-service build && export ELECTRON_IS_DEV=0 || set ELECTRON_IS_DEV=0 && electron-forge start",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "package": "vue-cli-service build && electron-forge package",
    "make": "vue-cli-service build && electron-forge make",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "core-js": "^3.6.5",
    "electron-dl": "^3.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.0",
    "element-ui": "^2.15.9",
    "lottie-web": "^5.9.4",
    "publish": "^0.6.0",
    "update-electron-app": "^2.0.1",
    "vue": "^2.6.11",
    "vue-resource": "^1.5.3",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.66",
    "@vue/cli-plugin-babel": "~4.5.17",
    "@vue/cli-plugin-eslint": "~4.5.17",
    "@vue/cli-service": "~4.5.17",
    "babel-eslint": "^10.1.0",
    "electron": "^18.2.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "forge": {
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "xionghaoo",
              "name": "fairyland"
            },
            "authToken": "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",
            "prerelease": false,
            "draft": true
          }
        }
      ],
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fairyland"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
