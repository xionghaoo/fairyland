{
  "name": "fairyland",
  "version": "1.0.2",
  "private": true,
  "main": "main.js",
  "author": {
    "name": "xionghao",
    "email": "xionghao930316@gmail.com"
  },
  "description": "幻境客户端",
  "productName": "AIView-desktop",
  "scripts": {
    "start": "cross-env ELECTRON_IS_DEV=1 && vue-cli-service build && electron-forge start",
    "start_prod": "cross-env ELECTRON_IS_DEV=0 && vue-cli-service build && electron-forge start",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "pack": "vue-cli-service build && electron-builder --dir",
    "publish": "electron-builder --p always",
    "dist": "vue-cli-service build && electron-builder"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "core-js": "^3.6.5",
    "electron-dl": "^3.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.2.1",
    "element-ui": "^2.15.9",
    "lottie-web": "^5.9.4",
    "publish": "^0.6.0",
    "source-map-support": "^0.5.21",
    "vue": "^2.6.11",
    "vue-resource": "^1.5.3",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.66",
    "@vue/cli-plugin-babel": "~4.5.17",
    "@vue/cli-plugin-eslint": "~4.5.17",
    "@vue/cli-service": "~4.5.17",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.4",
    "electron-builder": "^23.3.3",
    "electron-webpack": "^2.8.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "build": {
    "appId": "com.ubt.fairyland",
    "productName": "AIView",
    "directories": {
      "buildResources": "./resources",
      "output": "./build"
    },
    "files": [
      "**/*",
      "!build",
      "!out"
    ],
    "asar": true,
    "win": {
      "icon": "./resources/icons/icon.ico",
      "publish": {
        "provider": "generic",
        "url": "https://roboland-deliv.ubtrobot.com/vision/fairyland/update/",
        "updaterCacheDirName": "fairyland-updater"
      },
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "shortcutName": "AIView"
    },
    "mac": {
      "publish": [
        "github"
      ],
      "entitlements": "./entitlements.plist"
    },
    "dmg": {
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 106,
          "y": 252,
          "name": "Fairyland"
        },
        {
          "x": 490,
          "y": 252,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "幻境 v${version}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "xionghaoo",
        "repo": "fairyland",
        "token": "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",
        "private": true,
        "releaseType": "release"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xionghaoo/fairyland.git"
  }
}
